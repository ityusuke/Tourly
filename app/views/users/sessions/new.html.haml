%h2.page_title ログインページ
= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .form-inputs
    = f.input :email,                       
      required: false,                      
      autofocus: true,                      
      input_html: { autocomplete: "email",class:"form-control mb-3" } 
    = f.input :password,                               
      required: false,                                 
      input_html: { autocomplete: "current-password",class:"form-control mb-3"} 
    = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
  .form-actions
    = f.button :submit, "ログインする"
= render "users/shared/links"
