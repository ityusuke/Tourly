-@tours.each do |tour|
  .card.my-1
    .card-body
      %h4.card-title  
        %smallタイトル:
        #{tour.tourname}
      %h6.card-subtitle.mb-2.text-muted 
        %small製作者:
        =link_to(tour.user.username,user_path(tour.user.id))
      %p.card-text
        = truncate(tour.tourcontent,separator: '.',lendth:40) do
          =link_to("続きを読む",tour_path(tour.id))
    

      = link_to "詳細",tour_path(tour.id),class:"card-link"
      -if current_user
        = link_to "編集",edit_tour_path,class:"card-link"
        = link_to "削除","/tours/#{tour.id}",class:"card-link",method: :delete


