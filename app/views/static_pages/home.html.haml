#carouselFadeExampleIndicators.carousel.slide.text-center.w-52.carousel-fade{"data-ride" => "carousel"}
  .carousel-inner{:role => "listbox"}
    .carousel-item.active
      %img.d-block.w-100{:alt => "First slide", :src => "assets/temple.jpg", :width => "200px", :height => "380px"}/
    .carousel-item
      %img.d-block.w-100{:alt => "Second slide", :src => "assets/sun.jpg", :width => "200px", :height => "380px"}/
    .carousel-item
      %img.d-block.w-100{:alt => "Second slide", :src => "assets/travel2.jpg", :width => "200px", :height => "380px"}/
  %a.carousel-control-prev{"data-slide" => "prev", :href => "#carouselFadeExampleIndicators", :role => "button"}
    %span.carousel-control-prev-icon{"aria-hidden" => "true"}
    %span.sr-only Previous
  %a.carousel-control-next{"data-slide" => "next", :href => "#carouselFadeExampleIndicators", :role => "button"}
    %span.carousel-control-next-icon{"aria-hidden" => "true"}
    %span.sr-only Next
