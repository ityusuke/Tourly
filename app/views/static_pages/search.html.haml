-if @search.count == 0
  %p 検索した結果、記事が見つかりませんでした...
-else
  = page_entries_info @search
  = paginate @search  
    -@search.each do |tour|
    .card.mb-1.mt-1
      .card-body
        %h4.card-title  
          %smallタイトル:
          #{tour.tourname}
        %h6.card-subtitle.mb-2.text-muted 
          %small製作者:
          =link_to(tour.user.username,user_path(tour.user.id))
        %p.card-text
          = truncate(tour.tourcontent,separator: '.',lendth:40) do
            =link_to("続きを読む",tour_path(tour.id))
        %p.card-text
        - tour.tag_list.each do |tag|
          %span{:style => "background-color: #e9e9e9; border-radius: 5px;"}= tag
    
        = link_to "詳細",tour_path(tour.id),class:"card-link"
=link_to("記事一覧に戻る",tours_path)
= paginate @search  