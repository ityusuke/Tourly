%h2.page_title ログインページ
= simple_form_for(:session, url: login_path,html: {multipart: true}) do |f| 
  .form-inputs.form_group
    = f.input :email,                       
      required: true,                       
      autofocus: true,                      
      input_html: { autocomplete: "email",class:"form-control"} 
    = f.input :password,                                                                    
      required: true,                                                                       
      input_html: { autocomplete: "new-password",class:"form-control" }                                        
    = f.button :submit, "ログインする",
    input_html: { class:" btn btn-primary " } 